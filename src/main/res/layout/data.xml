                android:weightSum="1"
                android:gravity="center"
                android:layout_marginTop="10dp"
                >

                <android.support.v7.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_weight="0.8"
                    android:gravity="center"
                    android:id="@+id/card3">
                    <LinearLayout
